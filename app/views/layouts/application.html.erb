<!DOCTYPE html>
<html>
<head>
  <title>Website</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="wrapper">

    <div class="header">
      <div class="title">

        <%= link_to image_tag("title.png", :width => 800), root_url %>

      </div>
      <div class="nav">
        <% if user_signed_in? %>
          <%= link_to image_tag("buttons/btn_logout.png"), destroy_user_session_path, :method => :delete %>
        <%else  %>
          <%= link_to image_tag("buttons/btn_login.png"), new_user_session_path %>
        <% end %>
      </div>

      <% if user_signed_in? %>
        <div class="clear">&nbsp;</div>

        <div class="points-counter">
          Points: <%= current_user.points %>
        </div>
      <% end %>
    </div>

    <% if flash[:notice] %>
      <div class="flash"><%= flash[:notice] %></div>
    <% end %>


    <%= yield %>

  </div>
</body>
</html>
