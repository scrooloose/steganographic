<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% @challenge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :image_1_id, "Image one" %><br />
    <%= f.collection_select :image_1_id, Image.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :image_1_id, "Image two" %><br />
    <%= f.collection_select :image_2_id, Image.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.text_field :answer, :placeholder => "Enter the answer" %>
  </div>

  <div class="field">
    <%= f.label :email, "Challenge" %><br />
    <%= f.email_field :email, :placeholder => "your@friend.com" %>
  </div>

  <div class="actions">
    <%= f.submit "Send" %>
  </div>
<% end %>
