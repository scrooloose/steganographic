<div class="challenge-large-display">
  <div class="image-one">
    <%= link_to image_tag(challenge.image_1.image(:default)), new_challenge_response_path(challenge) %>
  </div>

  <div class="image-two">
    <%= link_to image_tag(challenge.image_2.image(:default)), new_challenge_response_path(challenge) %>
  </div>

  <% unless challenge.clue.blank? %>
    <div class="clue">
      Clue: <%= challenge.clue %>
    </div>
  <% end %>
</div>
