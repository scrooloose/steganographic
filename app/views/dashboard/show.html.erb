<div style="text-align: center; margin-bottom: 30px">
  <%= image_tag "lets_play.png" %>
</div>

<% if current_user.challenges.last %>
  <div style="border: 2px solid orange; width: 425px; text-align: center; float: left">
    <%= render :partial => "challenges/large_display", :locals => { :challenge => current_user.challenges.last } %>
  </div>

  <div style="padding-left: 20px; float: left">
    <h3>&larr; YOUR LATEST CHALLENGE!</h3>
    <%= link_to image_tag("buttons/btn_add.png"), new_challenge_path %>
  </div>

<% else %>
  <%= link_to image_tag("buttons/btn_add.png"), new_challenge_path %>
<% end %>



<div class="clear">&nbsp;</div>

<div class="teaser-challenges">
  <% current_user.challenges_to_try.order('created_at DESC').limit(3).each do |challenge| %>
    <%= render :partial => "challenges/display", :locals => { :challenge => challenge, :thumb => :home_page, :create_links => true } %>
  <% end %>
</div>

<div class="clear">&nbsp;</div>

<h3>Newly added</h3>

<br />
<br />

