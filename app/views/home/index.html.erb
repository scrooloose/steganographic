<div class="home-page">

  <div class="teaser-challenges">
      <div class="challenge">
        <%= image_tag "teasers/1.png" %>
        sitting on the fence
      </div>

      <div class="challenge">
        <%= image_tag "teasers/2.png" %>
        w__ d__ t__ c______ c____ t__ r___ ?
      </div>

      <div class="challenge">
        <%= image_tag "teasers/3.png" %>
        ____ __ _____
      </div>
  </div>

  <div class="teaser-text">CAN YOU FIGURE IT OUT?</div>

  <%= form_for @user, :url => signup_login_path, :method => :post do |f| %>
    <div class="field"><%= f.email_field :email, :placeholder => "you@yours.com", :autocomplete => "off", :required => true %></div>

    <div class="field"><%= f.password_field :password, :placeholder => "password", :autocomplete => "off", :required => true %></div>

    <div>
      <%= image_submit_tag "buttons/btn_play.png" %>
    </div>

  <% end %>
</div>
